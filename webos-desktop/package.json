{
  "name": "webos-desktop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run format && vite build && rm -rf ../desktop/* && cp -r dist/* ../desktop/",
    "preview": "vite preview",
    "format": "git diff --name-only --diff-filter=ACMRTUXB | grep -E '\\.(js|jsx|ts|css|json|html)$' || true | xargs -r -P 4 pnpm exec prettier --write",
    "lint": "eslint . --ext .js,.jsx --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-es": "^4.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "prettier": "^3.8.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "browserfs": "^1.4.3",
    "globals": "^17.0.0",
    "idb-keyval": "^6.2.2",
    "interactjs": "^1.10.27",
    "lodash-es": "^4.17.22",
    "memfs": "^4.54.0",
    "workbox-window": "^7.4.0"
  }
}
